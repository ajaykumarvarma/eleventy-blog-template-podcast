---
layout: layout.njk
---

<div class="max-w-4xl mx-auto py-8 px-4">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
            <div class="flex flex-col sm:flex-row items-center mb-6">
                <img src="{{ podcastData.portrait_src }}" alt="Portrait" class="w-33 h-32 rounded-full mb-4 sm:mb-0 sm:mr-6">
                <h1 class="text-4xl font-bold">{{ podcastData.title }}</h1>
            </div>
            <p class="text-lg mb-4">{{ podcastData.description }}</p>
            <a href="{{ podcastData.webstoryurl }}" class="text-blue-500 hover:underline text-lg mb-8 inline-block">
                {{ podcastData.webstoryurl }}
            </a>
            {% for note in podcastData.notes %}
                <section class="mt-8 bg-gray-100 p-4 rounded-md">
                    <h2 class="text-3xl font-semibold mb-4">{{ note.title }}</h2>
                    <ul class="list-disc ml-5 text-lg">
                    {% for listItem in note.list %}
                        <li class="mb-2">{{ listItem }}</li>
                    {% endfor %}
                    </ul>
                </section>
            {% endfor %}
        </div>
    </div>
</div>
